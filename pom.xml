			</dependency>
			<dependency>
				<groupId>de.slothsoft.phpmaven</groupId>
				<artifactId>maven-php-statedb</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>de.slothsoft.phpmaven</groupId>
				<artifactId>maven-php-validate-lint</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>de.slothsoft.phpmaven.pear</groupId>
				<artifactId>pear-java-api</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>de.slothsoft.phpmaven.pear</groupId>
