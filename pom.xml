			<dependency>
				<groupId>de.slothsoft.phpmaven</groupId>
				<artifactId>maven-php-phpdoc</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>de.slothsoft.phpmaven</groupId>
				<artifactId>maven-php-phpunit</artifactId>
