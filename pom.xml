<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <properties>
        <phpmavenTagName>phpexec-java-${project.version}</phpmavenTagName>
    </properties>

    <parent>
        <groupId>org.phpmaven.build</groupId>
        <artifactId>site-parent-branches</artifactId>
        <version>1</version>
    </parent>

    <groupId>org.phpmaven.sites</groupId>
    <artifactId>phpexec-java-site</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>${project.version}</name>

    <description>
        A public API for executing php from java.
    </description>
    
    <url>${phpmavenRootUrl}/${phpmavenTagType}/${phpmavenTagName}/</url>
    
    <distributionManagement>
        <site>
            <id>upload-${phpmavenSitesId}</id>
            <name>${phpmavenSitesName}</name>
            <url>${phpmavenSitesUploadUrl}/${phpmavenTagType}/${phpmavenTagName}/</url>
        </site>
    </distributionManagement>
    
    <scm>
        <connection>${phpmavenRootScmUrl}</connection>
        <developerConnection>${phpmavenRootScmUrl}</developerConnection>
        <url>${phpmavenRootScmUrlWeb}</url>
    </scm>
    
    <modules>
    	<module>generic-parent</module>
    	<module>java-parent</module>
    	<module>site-parent</module>
    	<module>library</module>
    </modules>
    
    <build>
        <plugins>
        	<plugin>
        		<groupId>org.apache.maven.plugins</groupId>
        		<artifactId>maven-javadoc-plugin</artifactId>
        		<version>2.8</version>
        		<configuration>
                    <show>private</show>
                    <header>${google.analytics.header}</header>
                    <bottom>${htmlBottom}</bottom>
                </configuration>
        		<executions>
        			<execution>
        				<id>aggregate</id>
        				<goals><goal>aggregate</goal></goals>
        				<phase>site</phase>
        			</execution>
				</executions>
        	</plugin>
        	<plugin>
        		<groupId>org.apache.maven.plugins</groupId>
        		<artifactId>maven-jxr-plugin</artifactId>
        		<version>2.3</version>
        		<configuration>
        			<bottom>${google.analytics.header} ${htmlBottom}</bottom>
                </configuration>
        		<executions>
        			<execution>
        				<id>aggregate</id>
        				<goals><goal>aggregate</goal></goals>
        				<phase>site</phase>
        			</execution>
				</executions>
        	</plugin>
        	<plugin>
        		<groupId>org.apache.maven.plugins</groupId>
        		<artifactId>maven-surefire-report-plugin</artifactId>
        		<version>2.12</version>
        		<configuration>
                    <aggregate>true</aggregate>
                </configuration>
        		<executions>
        			<execution>
        				<id>aggregate</id>
        				<goals><goal>report</goal></goals>
        				<phase>site</phase>
        			</execution>
				</executions>
        	</plugin>
        	<plugin>
        		<groupId>org.codehaus.mojo</groupId>
        		<artifactId>cobertura-maven-plugin</artifactId>
        		<version>2.6-SNAPSHOT</version>
        		<configuration>
                    <aggregate>true</aggregate>
                    <formats><format>xml</format><format>html</format></formats>
                	<forceMojoExecution>true</forceMojoExecution>
                	<outputDirectory>${project.build.directory}/site/cobertura</outputDirectory>
                </configuration>
        		<executions>
        			<execution>
        				<id>aggregate</id>
        				<goals><goal>cobertura</goal></goals>
        				<phase>site</phase>
        			</execution>
				</executions>
        	</plugin>
            <plugin>
                <groupId>org.phpmaven.sites</groupId>
                <artifactId>sitemap-plugin</artifactId>
                <version>1</version>
                <configuration>
                </configuration>
                <executions>
                    <execution>
                        <phase>site</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    
</project>